<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Galeria2">

    <ImageView
        android:id="@+id/fundo3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:scaleX="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fundopng" />

    <com.google.ar.sceneform.SceneView
        android:id="@+id/sceneview"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="150dp"
        android:background="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/iv_visual"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="150dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_NFTt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:textColor="#ECECEC"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/ib_Home1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/pref2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:background="#9AB6B6B6"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        app:layout_constraintBottom_toTopOf="@+id/sceneview"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_NFTc"
            android:layout_width="256dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:textColor="#000000"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/bInfo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:text="+ Info"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/bCompartir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:text="Compartir" />

            <Button
                android:id="@+id/bComprar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:text="Comprar NFT" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#9AB6B6B6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sceneview">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif-black"
                android:text="NFT Modelo 3-D"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_NFTpreuro"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_NFTpreuth"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="14dp"
                android:fontFamily="sans-serif-black"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <Button
                android:id="@+id/bNFT3d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:text="NFT 3D" />

            <Button
                android:id="@+id/bAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:text="Audio explicativo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/bVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8E0208"
                android:minHeight="48dp"
                android:text="Video explicativo"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>